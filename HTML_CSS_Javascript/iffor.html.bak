	//문제 1부터 100까지중 3의배수 합을 구하자

	//구구단
	var gugudan = function(){
	var strHTML = "";
	var result = 0;
		for(var i=1; i<=9; i++){
			
			for(var j=1; j<=9; j++){
				
				result = i * j;
				strHTML += i + " X " + j + " = " + result + "<br/>";
			}

		}
		document.getElementById("msg").innerHTML = strHTML
	}
  </script>
