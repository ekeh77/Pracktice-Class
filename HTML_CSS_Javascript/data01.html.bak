  <title>Document</title>
  <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
  <script>
	$(document).ready(
		function(){

			$("#btn").on("click",
				
				function(){
					var txt = $("#contents").val();
					$("#msg").html(txt);

				}

			)//$("btn").on
			
		}//$(document).ready function()

	);//$(document).ready
  </script>
 </head>
 <body>
	<div>
		<textarea cols="100" rows="10" id="contents">
			
		</textarea>
		<input type="button" value="확인" id="btn"/>
	</div>
	<div id="msg"></div>
 </body>
